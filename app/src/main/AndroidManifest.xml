<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.D308VacationPlanner"
        tools:targetApi="31">
        <activity
            android:name="com.example.capstone.UI.CarDetails"
            android:exported="false"
            android:label="Car Rental Details"
            android:parentActivityName="com.example.capstone.UI.VacationDetails" />

        <receiver
            android:name="com.example.capstone.UI.MyReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.example.capstone.UI.ExcursionDetails"
            android:exported="false"
            android:label="Excursion Details"
            android:parentActivityName="com.example.capstone.UI.VacationDetails" />
        <activity
            android:name="com.example.capstone.UI.VacationDetails"
            android:exported="false"
            android:label="Travel Details"
            android:parentActivityName="com.example.capstone.UI.Vacations" />
        <activity
            android:name="com.example.capstone.UI.Vacations"
            android:exported="false"
            android:label="Saved Travel Itineraries"
            android:parentActivityName="com.example.capstone.UI.MainActivity" />
        <activity
            android:name="com.example.capstone.UI.MainActivity"
            android:exported="true"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>